@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "EditDesignation";

    @model EmployeeManagement.Models.Designation

    
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Form Elements</div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <form asp-controller="Designation" asp-action="Edit" enctype="multipart/form-data" method="post">
                            <input hidden asp-for="DesignationId" />
                            
                            <div class="form-group">
                                <label for="Date">Designation Date</label>
                                <input type="text" asp-for="Date" class="form-control" id="Date" name="Date" placeholder="@Model.Date">

                            </div>
                            <div class="form-group">
                                <label for="Time">Designation Time</label>
                                <input type="text" asp-for="Time" class="form-control" id="Time" name="Time" placeholder="@Model.Time">

                            </div>
                            <div class="form-group">
                                <label for="Day">Designation Day</label>
                                <input type="text" asp-for="Day" class="form-control" id="Day" name="Day" placeholder="@Model.Day">

                            </div>
                            



                            
                           
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary" asp-route-id="@Model.DesignationId">Update</button>
                                    <a asp-controller="Designation" asp-action="AllDetails" class="btn btn-primary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>