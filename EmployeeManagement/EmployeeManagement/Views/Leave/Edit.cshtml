@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "EditLeave";

    @model EmployeeManagement.Models.Leave

    
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Form Elements</div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <form asp-controller="Leave" asp-action="Edit" enctype="multipart/form-data" method="post">
                            <input hidden asp-for="LeaveId" />
                            
                            <div class="form-group">
                                <label for="Name">Leave Type</label>
                                <input type="text" asp-for="Type" class="form-control" id="Type" name="Type" placeholder="@Model.Type">

                            </div>
                            <div class="form-group">
                                <label for="DepHod">From </label>
                                <input type="text" asp-for="FromDate" class="form-control" id="FromDate" name="FromDate" placeholder="@Model.FromDate">

                            </div>
                            <div class="form-group">
                                <label for="DepLocation">To</label>
                                <input type="text" asp-for="ToDate" class="form-control" id="ToDate" name="ToDate" placeholder="@Model.ToDate">

                            </div>
                            



                            
                           
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary" asp-route-id="@Model.LeaveId">Update</button>
                                    <a asp-controller="Leave" asp-action="AllDetails" class="btn btn-primary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>