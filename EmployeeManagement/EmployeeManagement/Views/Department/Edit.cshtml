@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "EditDepartment";

    @model EmployeeManagement.ViewModels.DepartmentEditViewModel

    
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Form Elements</div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <form asp-controller="Department" asp-action="Edit" enctype="multipart/form-data" method="post">

                            <input hidden asp-for="DepartmentId" />

                            <div class="form-group">
                                <label for="Name">Department Name</label>
                                <input type="text" asp-for="DepName" class="form-control" id="DepName" name="DepName" placeholder="@Model.DepName">

                            </div>

                       
                            <div class="form-group">
                                <label for="DepHod">Department Hod</label>
                                <input type="text" asp-for="DepHod" class="form-control" id="DepHod" name="DepHod" placeholder="@Model.DepHod">

                            </div>
                            <div class="form-group">
                                <label for="DepLocation">Department Location</label>
                                <input type="text" asp-for="DepLocation" class="form-control" id="DepLocation" name="DepLocation" placeholder="@Model.DepLocation">

                            </div>

                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary" asp-route-id="@Model.DepartmentId">Update</button>
                                    <a asp-controller="Department" asp-action="AllDetails" class="btn btn-primary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>