@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "CreateDepartment";

    @model EmployeeManagement.ViewModels.DepartmentViewModel

    
}


   
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Department</div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <form asp-controller="Department" asp-action="Create" enctype="multipart/form-data" method="post">
                            <div class="form-group">
                                <label for="Name">Department Name</label>
                                <input type="text" class="form-control" id="DepName" name="DepName" placeholder="Enter Department Name">

                            </div>
                            <div class="form-group">
                                <label for="DepHod">Department Hod</label>
                                <input type="text" class="form-control" id="DepHod" name="DepHod" placeholder="Enter Department Hod">

                            </div>
                            <div class="form-group">
                                <label for="DepLocation">Department Location</label>
                                <input type="text" class="form-control" id="DepLocation" name="DepLocation" placeholder="Enter Department Location">

                            </div>
                           


                            
                            
                            
                            <div class="card-action">
                                <button class="btn btn-success" type="submit">Submit</button>
                                <button class="btn btn-danger" type="button">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>