@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "EditEmployee";

    @model EmployeeManagement.ViewModels.EmployeeEditViewModel

    var PhotoPath = "~/img/image/" + (Model.ExistingPhotoPath ?? "noimage.jpg");
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Form Elements</div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 col-lg-4">
                        <form asp-controller="Employee" asp-action="Edit" enctype="multipart/form-data" method="post">
                            <input hidden asp-for="Id" />

                            <input hidden asp-for="ExistingPhotoPath" />
                            <div class="form-group">
                                <label for="Name">Full Name</label>
                                <input type="text" asp-for="Name" class="form-control" id="Name" name="Name" placeholder="@Model.Name">

                            </div>
                            <div class="form-group">
                                <label for="Age">Age</label>
                                <input type="text" asp-for="Age" class="form-control" id="Age" name="Age" placeholder="@Model.Age">

                            </div>
                            <div class="form-group">
                                <label for="Email">Email Address</label>
                                <input type="text" asp-for="Email" class="form-control" id="Email" name="Email" placeholder="@Model.Email">

                            </div>
                            <div class="form-group">
                                <label for="MobileNo">Mobile Number</label>
                                <input type="text" asp-for="MobileNo" class="form-control" id="MobileNo" name="MobileNo" placeholder="@Model.MobileNo">

                            </div>


                            <div class="form-group">
                                <label for="Gender">Gender</label>
                                <select class="form-control" id="Gender" name="Gender" asp-for="Gender">
                                    <option>@Model.Gender</option>

                                    <option>Male</option>
                                    <option>Female</option>


                                </select>
                            </div>

                            <div class="form-group">
                                <label for="Photo"> Photo</label>
                                <input type="file" class="form-control-file" id="Photo" name="Photo">
                            </div>
                            <div class="form-group row col-sm-4 offset-4">
                                <img class="img-thumbnail" src="@PhotoPath" asp-append-version="true" />
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary" asp-route-id="@Model.Id">Update</button>
                                    <a asp-controller="Employee" asp-action="AllDetails" class="btn btn-primary">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>