@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Admin";

    @model EmployeeManagement.Models.Employee


}



<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h4 class="card-title">Employee Details</h4>

            </div>
        </div>
        <div class="card-body">
            <div class="col-md-4">
                <div class="card card-post card-round">
                    <img class="card-img-top" src="~/img/image/@Model.PhotoPath" alt="Card image cap">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="avatar">
                                <img src="~/img/image/@Model.PhotoPath" alt="..." class="avatar-img rounded-circle">
                            </div>
                            <div class="info-post ml-2">
                                <p class="username">Name:@Model.Name</p>
                                <p class="date text-muted">Age:@Model.Age</p>
                            </div>
                        </div>
                        <div class="separator-solid"></div>
                        <p class="card-category text-info mb-1"><a href="#">Design</a></p>
                        <h3 class="card-title">
                            MobileNo: @Model.MobileNo
                        </h3>
                        <h3 class="card-title">
                            Gender: @Model.Gender
                        </h3>
                        <h3 class="card-title">
                            Email: @Model.Email
                        </h3>



                    </div>
                    <a asp-controller="Employee" asp-action="AllDetails" class="btn btn-primary" data-original-title="Back"><i class="fas fa-arrow-circle-left"></i></a>
                </div>
            </div>
            <!-- Modal -->





        </div>
    </div>
